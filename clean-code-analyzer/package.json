{
  "name": "clean-code-analyzer",
  "version": "1.0.0",
  "description": "A comprehensive tool for analyzing and improving code quality according to Clean Code principles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "cli": "node dist/cli.js",
    "dashboard:dev": "node dist/dashboard/server.js",
    "dashboard:build": "tsc && npm run dashboard:build-static",
    "dashboard:build-static": "cd src/dashboard && npx webpack --mode production"
  },
  "bin": {
    "clean-code-analyzer": "dist/cli.js"
  },
  "keywords": [
    "clean-code",
    "code-analysis",
    "typescript",
    "code-quality",
    "refactoring"
  ],
  "author": "Kin Workspace Team",
  "license": "MIT",

  "dependencies": {
    "@typescript-eslint/parser": "^6.7.0",
    "typescript": "^5.2.2",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chart.js": "^4.4.0",
    "react-chartjs-2": "^5.2.0",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/js-yaml": "^4.0.5",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/ws": "^8.5.5",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.4.4",
    "style-loader": "^3.3.3",
    "css-loader": "^6.8.1",
    "postcss-loader": "^7.3.3",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.15"
  }
}